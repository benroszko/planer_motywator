    <div class="list">
        each task, index in day.tasks
            a(href= `../dodawanie-usuwanie-zadania/${dayIndex}/${index}`)
                case task.status
                    when "SUCCESS"
                            .list-elem.green-border
                                .green-square
                                .hour= task.hour
                                span(class="name")= task.id
                                .priority= task.priority
                    when "PROGRESS"
                            .list-elem
                                .yellow-square
                                .hour= task.hour
                                span(class="name")= task.id
                                .priority= task.priority
                    when "FAILURE"
                            .list-elem.opacity
                                .red-square
                                .hour= task.hour
                                span(class="name")= task.id
                                .priority= task.priority
    </div>

